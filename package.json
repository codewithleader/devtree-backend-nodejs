{
  "name": "devtree",
  "version": "1.0.0",
  "description": "Primer Proyecto con Express y Typescript. Curso FullStack JuanPa",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node dist/main.js",
    "build": "rimraf dist && tsc -p ./tsconfig.build.json && tsc-alias -p ./tsconfig.build.json",
    "dev": "tsnd -r tsconfig-paths/register --respawn --clear src/main.ts",
    "dev:api": "tsnd -r tsconfig-paths/register --respawn --clear src/main.ts --api"
  },
  "author": "CODEWITHLEADER",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "colors": "^1.4.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "formidable": "^3.5.2",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "slug": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/formidable": "^3.4.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.3",
    "@types/slug": "^5.0.9",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
