{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@contexts/*": ["src/contexts/*"],
      "@shared/*": ["src/contexts/shared/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
